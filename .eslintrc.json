{
  "extends": ["expo", "prettier"],
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": "error",
    "arrow-body-style": "error",
    "prefer-arrow-callback": "error",
    "no-restricted-syntax": [
      "error",
      "FunctionExpression",
      "FunctionDeclaration"
    ],
    "no-console": ["error", { "allow": ["warn", "error"] }]
  }
}
